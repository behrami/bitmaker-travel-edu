<%= form_for :session, url: session_path, html: {id: 'signInForm'} do |f| %>
  <p>
    <%= f.text_field :user_name, placeholder: 'User Name' %>
  </p>

  <p>
    <%= f.password_field :password, placeholder: 'Password' %>
  </p>

  <p>
    <%= f.submit 'Sign In', id: 'signInSubmit' %>
  </p>
<% end %>

<div class= 'alert'><%= render partial: 'sessions/errorSignin' %></div>
