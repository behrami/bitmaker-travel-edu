<% if current_user %>
  <%= link_to( 'Sign out', session_path, method: :delete, class: 'btn btn-danger btn-lg', role: 'button') %>
  <div class='flash'>Welcome, <%= current_user.user_name %>!</div>
<% else %>
  <button type="button" class="btn btn-warning btn-lg" data-toggle="modal" data-target="#signin">Sign In</button>
  <button type="button" class="btn btn-warning btn-lg" data-toggle="modal" data-target="#signup">Sign Up</button>
<% end %>

<div class='flash'><%= flash[:notice] %></div>
