<!DOCTYPE html>
<html>
  <head>
    <title>Travelapp</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <h1>Where_to? WhereTo?</h1>

    <% if current_user %>
      Welcome <%= current_user.user_name %><br>
      <%= link_to('Home', months_path, class: 'btn btn-warning btn-lg', role: 'button') %>
      <%= link_to( 'Sign out', session_path, method: :delete, class: 'btn btn-warning btn-lg', role: 'button') %>
      <%= link_to( 'Favourites', favourites_path, class: 'btn btn-warning btn-lg', role: 'button') %>
    <% else %>
      <%= link_to('Home', months_path, class: 'btn btn-warning btn-lg', role: 'button') %>
      <!-- <%= link_to( 'Sign in', new_session_path, class: 'btn btn-warning btn-lg', role: 'button', id: 'SignIn')%> -->
      <button type="button" class="btn btn-warning btn-lg" data-toggle="modal" data-target="#exampleModal" id='SignIn'>
        Sign In
      </button>
      <%= link_to( 'Sign up', new_user_path, class: 'btn btn-warning btn-lg', role: 'button', id: 'SignUp') %><br>
    <% end %>

    <%= flash[:notice] %>

    <%= yield %>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
  </body>
</html>
