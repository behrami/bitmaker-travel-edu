<div class ='container'>

<div class = 'page-header'>
<h2>Where do you want to go?</h2>
</div>

<%= render 'months_form' %>

<%if @results%>
  <%@results.each do |key,value|%>
    <%=key%><br/>
    <% value.each do |result|%>
      <%if key == "City"%>
        <%= link_to result.name, city_hotels_path(result.id)%><br/>
      <%end%>
      <%if key == "Country"%>
        <%= link_to result.name, country_cities_path(result.id)%><br/>
      <% end %>
      <%if key == "Hotel"%>
        <%= link_to result.name, hotel_path(result.id)%><br/>
      <%end%>
    <%end%>
  <%end%>

<%end%>

<div class ='month-index'>

<% @months.each do |month| %>

    <p class="button"><%= link_to(month.name, month_countries_path(month), class: 'btn btn-info btn-lg', role: 'button') %></li>

<% end %>

</div>

</div>
