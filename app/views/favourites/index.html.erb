<h1>Favourites</h1>

<ul>
<% @favourites.each do |favourite|%>
  <% if current_user.id == favourite.user_id %>

    <li><%= link_to(favourite.hotel.name, hotel_path(favourite.hotel.id)) %></li>
    <%= link_to('Delete', favourite_path(favourite), method: :delete, data: {confirm: "Are you sure you want to delete this hotel?"}, class: 'btn btn-success btn-lg', role: 'button' ) %>

  <% end %>
<% end %>
</ul>
